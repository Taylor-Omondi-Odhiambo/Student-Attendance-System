                <% for (let i = 0; i < teachers.length; i++) { %>
                    <tr>
                        <td width = "100px"><%=teachers[i].Teacher%></td>
                        <td width = "100px"><%=teachers[i].ClassID%></td>
                        <td width = "100px"><%=teachers[i].Students%></td>
