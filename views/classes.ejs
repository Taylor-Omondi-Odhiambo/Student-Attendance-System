        <label for = "classID">Class ID:</label>
            <select type = "text" name="classID" >
                <option value =""></option>
                <% for (let i = 0; i < classes.length; i++) {%>
                <option value = "<%= classes[i].ClassID%>"><%= classes[i].ClassID %></option>
                <% } %>
            </select><br><br>
        <input class="button" type ="submit" value = "Retrieve Class Details">
        </form><br><br>
        
    </body>
